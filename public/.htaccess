# ========================================
# Security Headers for Hostinger (Apache)
# ========================================

<IfModule mod_headers.c>
    # Content Security Policy - Protezione XSS
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://www.google-analytics.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self';"
    
    # Impedisci al sito di essere caricato in iframe (clickjacking protection)
    Header set X-Frame-Options "DENY"
    
    # Previeni MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # XSS Protection (legacy, ma ancora utile)
    Header set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy - controlla informazioni inviate ad altri siti
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # HSTS - Forza HTTPS per 1 anno
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Rimuovi header che espongono info sul server
    Header unset X-Powered-By
    Header unset Server
</IfModule>

# ========================================
# Rewrite Rules per React Router (SPA)
# ========================================

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Non reindirizzare file esistenti
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-l
    
    # Reindirizza tutto a index.html (React Router)
    RewriteRule . /index.html [L]
</IfModule>

# ========================================
# Compressione GZIP
# ========================================

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript
    AddOutputFilterByType DEFLATE application/javascript application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/xml
</IfModule>

# ========================================
# Browser Caching
# ========================================

<IfModule mod_expires.c>
    ExpiresActive On
    
    # Immagini - 1 anno
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Font - 1 anno
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    
    # CSS e JavaScript - 1 mese
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    
    # HTML - 1 ora
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# ========================================
# Blocca accesso a file sensibili
# ========================================

<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "\.(env|json|log|md)$">
    Order allow,deny
    Deny from all
</FilesMatch>